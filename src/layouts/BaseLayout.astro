---
import { ViewTransitions } from 'astro:transitions'

import Footer from '~/components/Footer.astro'
import Navbar from '~/components/Navbar.astro'

interface Props {
  pageTitle?: string
  description?: string
  withoutNavbar?: boolean
  withoutFooter?: boolean
}
const {
  withoutNavbar = false,
  withoutFooter = false,
  pageTitle: title = 'Astro Starter Template',
  description = 'https://github.com/daotl/astro-starter',
} = Astro.props
---

<!doctype html>
<html lang="es" class="[scroll-behavior:smooth]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#EC0B2B" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="apple-touch-icon" href="favicon.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="favicon.png" />

    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>

  <body class="relative min-h-screen dark:bg-gray-400 dark:text-white">
    {!withoutNavbar && <Navbar />}

    <slot />

    {!withoutFooter && <Footer />}
  </body>
</html>
